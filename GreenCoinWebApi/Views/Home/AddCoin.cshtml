@model IList<GreenCoinWebApi.Models.WalletView>
@{
    ViewBag.Title = "My wallets";
}

<div class="container">
    <br />
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
               My Wallets
            </h1>
        </div>
    </div>
    <!-- /.row -->
    <!-- Portfolio Item Row -->
    <div class="row">
        <div class="col-md-12">
            <div>
                <table table-striped>
                    <tr>
                        <td class="text-center col-sm-4"/>
                            
                        <td class="text-center col-sm-4">
                            <h1> <strong>Wallet Name</strong>
                            </h1>
                        </td>
                        <td class="text-center col-sm-4">
                            <h1> <strong>Balance </strong>
                            </h1>
                        </td>
                    </tr>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>

                            <td class="text-center col-sm-4" >
                                <img height="30px"  src="../../Content/wallet.gif"/>
                            </td>
                                <td class="text-center col-sm-4">
                                <h3><strong> @Model[i].WalletName </strong>
                                </h3>
                            </td>
                            <td class="text-center col-sm-4">
                                <h3><strong> @Model[i].Amount</strong>
                                </h3>
                            </td>
                        </tr>

                    }

                </table>
                
                
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"></h3>
        </div>
    </div>
    <!-- /.row -->
</div>

